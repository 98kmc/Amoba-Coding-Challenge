<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AmobaCodingChallenge" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AmobaCodingChallenge" parent="Base.Theme.AmobaCodingChallenge" />

    <style name="Theme.AmobaCodingChallenge.CardBackground" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="Theme.AmobaCodingChallenge.LoginCardBackground" parent="Theme.AmobaCodingChallenge.CardBackground">
        <item name="android:padding">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/amoba_gray</item>
    </style>

    <style name="Theme.AmobaCodingChallenge.LoginInputEditLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/login_edit_text_layout</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/amoba_gray</item>
        <item name="hintTextColor">@color/amoba_gray</item>
        <item name="hintEnabled">false</item>
        <item name="colorPrimary">@color/amoba_gray</item>
    </style>

    <style name="Theme.AmobaCodingChallenge..LoginUserInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="fontFamily">@font/sofiapro_light</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/amoba_gray</item>
        <item name="hintTextColor">@color/amoba_gray</item>
        <item name="android:drawableStart">@drawable/user_icon</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="colorControlActivated">@color/amoba_gray</item>
    </style>

    <style name="Theme.AmobaCodingChallenge..LoginPasswordInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="fontFamily">@font/sofiapro_light</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/amoba_gray</item>
        <item name="hintTextColor">@color/amoba_gray</item>
        <item name="android:drawableStart">@drawable/password_icon</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="colorControlActivated">@color/amoba_gray</item>
    </style>

    <style name="RoundedCornerImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
    </style>

    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>